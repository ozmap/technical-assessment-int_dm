  "paths": {
    "/users": {
      "get": {
        "tags": ["Users"],
        "summary": "Lista todos os usuários",
        "description": "Lista todos os usuários cadastrados no sistema.",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "description": "Número da página",
            "required": false,
            "schema": {
              "type": "number",
              "default": 1
            }
          },
          {
            "in": "query",
            "name": "limit",
            "description": "Número de itens por página",
            "required": false,
            "schema": {
              "type": "number",
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuários obtidos com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Usuários obtidos com sucesso"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/User"
                      }
                    },
                    "page": {
                      "type": "number",
                      "example": 1
                    },
                    "limit": {
                      "type": "number",
                      "example": 10
                    },
                    "total": {
                      "type": "number",
                      "example": 1
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Não há nenhum usuário cadastrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Não há nenhum usuário cadastrado neste intervalo"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Users"],
        "summary": "Cria um novo usuário",
        "description": "Cria um novo usuário no sistema",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserCreateUpdate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Usuário criado com sucesso"
                    },
                    "data": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Endereço ou coordenadas não informados",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "É necessário o endereço ou as coordenadas"
                    }
                  }
                }
              }
            }
          },
          "422.1": {
            "description": "Error de validação de campos do body request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Formato de email inválido"
                    }
                  }
                }
              }
            }
          },
          "422.3": {
            "description": "Endereço e coordenadas informados ao mesmo tempo",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Informe apenas endereço ou coordenadas"
                    }
                  }
                }
              }
            }
          },
          "422.4": {
            "description": "Formato inválido de coordenadas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Informe coordenadas com latitude e longitude em formato numérico"
                    }
                  }
                }
              }
            }
          },
          "422.5": {
            "description": "Email já cadastrado no sistema",
